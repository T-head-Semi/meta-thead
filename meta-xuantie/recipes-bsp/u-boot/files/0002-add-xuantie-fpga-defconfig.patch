Subject: [PATCH] 0002-add-defconfig

---
 configs/fpga_xuantie_riscv32_smode_defconfig | 30 ++++++++++++++++++++
 configs/fpga_xuantie_riscv64_smode_defconfig | 30 ++++++++++++++++++++
 2 files changed, 60 insertions(+)
 create mode 100644 configs/fpga_xuantie_riscv32_smode_defconfig
 create mode 100644 configs/fpga_xuantie_riscv64_smode_defconfig

diff --git a/configs/fpga_xuantie_riscv32_smode_defconfig b/configs/fpga_xuantie_riscv32_smode_defconfig
new file mode 100644
index 0000000000..f7ea6a9344
--- /dev/null
+++ b/configs/fpga_xuantie_riscv32_smode_defconfig
@@ -0,0 +1,30 @@
+CONFIG_RISCV=y
+CONFIG_SYS_MALLOC_LEN=0x800000
+CONFIG_NR_DRAM_BANKS=1
+CONFIG_HAS_CUSTOM_SYS_INIT_SP_ADDR=y
+CONFIG_CUSTOM_SYS_INIT_SP_ADDR=0x607fffff
+CONFIG_ENV_SIZE=0x20000
+CONFIG_DM_SERIAL=n
+CONFIG_SYS_NS16550_SERIAL=y
+CONFIG_SYS_NS16550=y
+CONFIG_DEFAULT_DEVICE_TREE="fpga-xuantie-riscv32"
+CONFIG_SYS_LOAD_ADDR=0x60800000
+CONFIG_TARGET_TH1520_LPI4A=y
+CONFIG_ARCH_RV32I=y
+CONFIG_RISCV_SMODE=y
+CONFIG_FIT=y
+CONFIG_SYS_BOOTM_LEN=0x4000000
+CONFIG_DISTRO_DEFAULTS=y
+CONFIG_USE_PREBOOT=y
+CONFIG_PREBOOT="setenv fdt_addr ${fdtcontroladdr}; fdt addr ${fdtcontroladdr};"
+CONFIG_BOOTCOMMAND="booti 0x60800000 - 0x63f00000"
+CONFIG_DISPLAY_CPUINFO=y
+CONFIG_DISPLAY_BOARDINFO=y
+CONFIG_CMD_BOOTEFI_SELFTEST=y
+CONFIG_CMD_NVEDIT_EFI=y
+CONFIG_SYS_RELOC_GD_ENV_ADDR=y
+CONFIG_FLASH_SHOW_PROGRESS=0
+CONFIG_SYS_MAX_FLASH_BANKS=2
+CONFIG_CC_OPTIMIZE_FOR_DEBUG=y
+CONFIG_SYS_NS16550_MEM32=y
+CONFIG_SYS_NS16550_REG_SIZE=-4
